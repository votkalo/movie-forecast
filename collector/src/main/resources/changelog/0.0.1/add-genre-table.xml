<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="add-genre-table" author="kirill.votkalo">
        <createTable tableName="genre" schemaName="public">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"
                             primaryKeyName="pk_genre_id" uniqueConstraintName="uk_genre_id"/>
            </column>
            <column name="name" type="varchar(20)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_genre_name"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-genre-id-index" author="kirill.votkalo">
        <createIndex tableName="genre"
                     indexName="genre_id_index"
                     schemaName="public"
                     unique="true">
            <column name="id" type="bigint"/>
        </createIndex>
    </changeSet>

    <changeSet id="fill-genre-table" author="kirill.votkalo">
        <loadData tableName="genre" file="changelog/0.0.1/data/genre.csv" schemaName="public">
            <column name="name" type="string"/>
        </loadData>
    </changeSet>
</databaseChangeLog>