<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="add-movie-country-table" author="kirill.votkalo">
        <createTable tableName="movie_country">
            <column name="fk_movie_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_movie_key"
                             referencedTableName="movie" referencedColumnNames="id"/>
            </column>
            <column name="fk_country_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_country_key"
                             referencedTableName="country" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-movie-country-fk-movie-id-index" author="kirill.votkalo">
        <createIndex tableName="movie_country"
                     indexName="movie_country_fk_movie_id_index"
                     schemaName="public"
                     unique="false">
            <column name="fk_movie_id" type="bigint"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-movie-country-fk-country-id-index" author="kirill.votkalo">
        <createIndex tableName="movie_country"
                     indexName="movie_country_fk_country_id_index"
                     schemaName="public"
                     unique="false">
            <column name="fk_country_id" type="bigint"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>