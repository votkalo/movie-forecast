<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="add-user-table" author="kirill.votkalo">
        <createTable tableName="user" schemaName="public">
            <column name="user_id" type="bigint" autoIncrement="false">
                <constraints primaryKey="true" nullable="false" unique="true"
                             primaryKeyName="pk_user_id" uniqueConstraintName="uk_user_id"/>
            </column>
            <column name="chat_id" type="bigint">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_chat_id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-user-id-index" author="kirill.votkalo">
        <createIndex tableName="user"
                     indexName="user_id_index"
                     schemaName="public"
                     unique="true">
            <column name="user_id" type="bigint"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>